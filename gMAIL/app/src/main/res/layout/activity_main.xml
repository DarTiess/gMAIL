<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="35dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />

            <TextView
                android:layout_width="327dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Успевайте больше с почтой Gmail"
                android:textAlignment="center"
                android:textColor="#202124"
                android:textSize="42dp"

                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="18dp"
                android:text="Почта Gmail стала ещё безопаснее, эффективнее и удобнее. Новый интерфейс позволит вам экономить время и работать максимально продуктивно."
                android:textSize="14dp" />

            <ImageView
                android:layout_width="282dp"
                android:layout_height="107dp"
                android:src="@drawable/phone" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="60dp"
                android:layout_marginTop="25dp"
                android:background="#1a73e8"
                android:onClick="onClickButt"
                android:padding="8dp"
                android:text="Попробовать Gmail"
                android:textColor="#ffffff" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Gmail на всех ваших устройствах"
                android:textSize="24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Скачайте приложение Gmail и пользуйтесь почтой на любом устройстве."
                android:textSize="14dp" />

            <ImageView
                android:layout_width="238dp"
                android:layout_height="50dp"
                android:src="@drawable/app_ic" />

            <ImageView
                android:layout_width="269dp"
                android:layout_height="189dp"
                android:src="@drawable/comps" />



        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>